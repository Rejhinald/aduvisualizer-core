# ADU Visualizer Core - Environment Variables

# App Config
ENV=development
PORT=3001
APP_NAME=aduvisualizer-core
APP_VERSION=1.0.0

# API Config
API_VERSION=v1
API_PREFIX=/api
BASE_HOST=localhost

# Database (PostgreSQL)
DB_ENGINE=postgresql
DB_NAME=aduvisualizer
DB_USER=postgres
DB_PASS=postgres
DB_HOST=localhost
DB_PORT=5432
# Or use a connection string:
# DB_URI=postgresql://user:pass@host:5432/dbname
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Pagination
DEFAULT_PER_PAGE=20
MAX_PER_PAGE=100

# JWT Auth (change these in production!)
JWT_ACCESS_SECRET_KEY=adu-access-secret-change-me-in-production
JWT_REFRESH_SECRET_KEY=adu-refresh-secret-change-me-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Cookies
AUTH_REFRESH_COOKIE_NAME=adu_refresh_token
AUTH_ACCESS_COOKIE_NAME=adu_access_token
AUTH_CSRF_COOKIE_NAME=adu_csrf_token
AUTH_CSRF_HEADER_NAME=x-csrf-token

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info

# Google Maps API (for satellite imagery)
# Get your API key at: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=

# Nano Banana AI (for 3D visualization)
NANOBANANA_API_KEY=
NANOBANANA_API_URL=https://api.nanobanana.ai/v1
